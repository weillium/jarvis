{
  "name": "jarvis",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=22.21.0 <26"
  },
  "workspaces": [
    "web",
    "worker",
    "mobile",
    "packages/*",
    "supabase/functions/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter web dev",
    "dev:worker": "pnpm --filter worker dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "turbo run build",
    "build:web": "pnpm --filter web build",
    "build:worker": "pnpm --filter worker build",
    "build:mobile": "pnpm --filter mobile build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "pnpm -r typecheck"
  },
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@tamagui/animations-react-native": "^1.138.5",
    "@tamagui/config": "^1.138.5",
    "@tamagui/core": "^1.138.5",
    "@tamagui/font-inter": "^1.138.5",
    "metro-runtime": "^0.83.3",
    "react-native-reanimated": "~3.16.7",
    "tamagui": "^1.138.5"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.46.3"
  }
}
